{% trans_default_domain 'messages' %}

{{ form_start(form, {'attr': {'id': 'form_validation', 'class': 'uk-form-stacked'}}) }}
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-large-1-3">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-form-row">
                        {{ form_label(form.user, null, {'label_attr': {'class' : 'uk-form-label'}}) }}
                        {{ form_widget(form.user, {'attr': {'data-md-selectize' : true}}) }}
                    </div>
                    <div class="uk-form-row">
                        {{ form_label(form.shipping, null, {'label_attr': {'class' : 'uk-form-label'}}) }}
                        {{ form_widget(form.shipping, {'attr': {'data-md-selectize' : true}}) }}
                    </div>
                    <div class="uk-form-row">
                        {{ form_label(form.deliveryAddress, null, {'label_attr': {'class' : 'uk-form-label'}}) }}
                        {{ form_widget(form.deliveryAddress, {'attr': {'data-md-selectize' : true}}) }}
                    </div>
                    <div class="uk-form-row">
                        {{ form_label(form.billingAddress, null, {'label_attr': {'class' : 'uk-form-label'}}) }}
                        {{ form_widget(form.billingAddress, {'attr': {'data-md-selectize' : true}}) }}
                    </div>
                    <div class="uk-form-row">
                        {{ form_label(form.status, null, {'label_attr': {'class' : 'uk-form-label'}}) }}
                        {{ form_widget(form.status, {'attr': {'data-md-selectize' : true}}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-width-large-2-3">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="lines" data-prototype="{{ form_widget(form.commandLines.vars.prototype)|e('html_attr') }}">
                        {% for commandLine in form.commandLines %}
                            <div class="uk-form-row">
                                <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
                                    <div class="uk-width-large-2-5">
                                        {{ form_widget(commandLine.product, {'attr': {'class': 'md-input'}}) }}
                                    </div>
                                    <div class="uk-width-large-2-5">
                                        {{ form_widget(commandLine.quantity, {'attr': {'class': 'md-input'}}) }}
                                    </div>
                                    <div class="uk-width-large-1-5">
                                        <button type="button" class="md-btn md-btn-flat-danger">Delete</button>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-width-1-1 uk-text-center uk-margin-top">
            {% if command is defined %}
                <a class="md-btn md-btn-default" href="{{ url('admin_sale_command_show', {'id': command.id}) }}">
                    <i class="fa fa-arrow-left"></i>
                    {{ 'button.cancel'|trans }}
                </a>
                <button class="md-btn md-btn-success" type="submit">
                    {{ 'button.update'|trans }}
                    <i class="fa fa-check"></i>
                </button>
            {% else %}
                <a class="md-btn md-btn-default" href="{{ url('admin_sale_command_list') }}">
                    <i class="fa fa-arrow-left"></i>
                    {{ 'button.cancel'|trans }}
                </a>
                <button class="md-btn md-btn-success" type="submit">
                    {{ 'button.add'|trans }}
                    <i class="fa fa-check"></i>
                </button>
            {% endif %}
        </div>
    </div>
{{ form_end(form) }}
