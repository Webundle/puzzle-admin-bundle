{% trans_default_domain 'messages' %}

<div class="uk-width-medium-6-10 uk-container-center">
   {{ form_start(form) }}
		<div class="md-card">
            <div class="md-card-content">
                <div class="uk-form-row">
                    {{ form_label(form.value, null, {'label_attr': {'class': 'uk-form-label'}}) }}
                    {{ form_widget(form.value, {'attr': {'class': 'md-input'}}) }}
                </div>
                <div class="uk-form-row">
                    {{ form_label(form.criteria, null, {'label_attr': {'class': 'uk-form-label'}}) }}
                    {{ form_widget(form.criteria, {'attr': {'class': 'md-input'}}) }}
                </div>
                <div class="uk-form-row">
                    {{ form_label(form.totalUsage, null, {'label_attr': {'class': 'uk-form-label'}}) }}
                    {{ form_widget(form.totalUsage, {'attr': {'class': 'md-input'}}) }}
                </div>
                <div class="uk-form-row">
                    {{ form_label(form.users, null, {'label_attr': {'class': 'uk-form-label'}}) }}
                    {{ form_widget(form.users, {'id': 'kUI_multiselect_users'}) }}
                </div>
                <div class="uk-form-row">
                    {{ form_label(form.expiredAt, null, {'label_attr': {'class' : 'uk-form-label'}}) }}
                    {% if coupon is not defined or coupon.expiredAt is empty %}
                        {{ form_widget(form.expiredAt, {'attr': {'class': 'datepicker'}}) }}
                    {% else %}
                        {{ form_widget(form.expiredAt, {'attr': {'class': 'datepicker'}, 'value' : coupon.expiredAt|date('Y-m-d H:i') }) }}
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="uk-text-center uk-margin-top">
            <a class="md-btn md-btn-default" href="{{ url('admin_sale_coupon_list') }}">
                <i class="fa fa-arrow-left"></i>
                {{ 'button.cancel'|trans }}
            </a>
            <button class="md-btn md-btn-success" type="submit">
                {% if coupon is defined %}
                    {{ 'button.update'|trans }}
                {% else %}
                    {{ 'button.add'|trans }}
                {% endif %}
                <i class="fa fa-check"></i>
            </button>
        </div>
    {{ form_end(form) }}
</div>
