{% trans_default_domain 'blog' %}

{% extends 'AdminBundle:Blog:layout.html.twig' %}

{% block title %}{{ parent() }} - {{ "blog.post.update.title"|trans|capitalize }} {{ post.name|capitalize }} {% endblock %}

{% block breadcrumbmodule %}
    {{ parent() }}
    <a href=" {{ url('puzzle_admin_blog_post_list') }} ">
       {{ 'blog.post.list.title'|trans|capitalize }}
    </a>
    <i class="fa fa-chevron-right"></i>
    <em>{{ "blog.post.update.title"|trans|capitalize }}</em>
{% endblock %}

{% block content %}
    <div id="page_content_inner">
        {% include 'AdminBundle:Blog:form_post.html.twig' with {'form': form, 'post': post} %}
    </div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		$('body').on('change', '#flash', function(e){
			if ($(this).is(':checked')) {
				$('#flash-expires-at-row').removeClass('uk-hidden');
			}else{
				$('#flash-expires-at-row').addClass('uk-hidden');
			}
		});
	</script>
{% endblock %}
