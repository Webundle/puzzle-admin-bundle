{% trans_default_domain 'media' %}

{% extends 'AdminBundle:Media:layout.html.twig' %}

{% set pageTitle = 'media.file.list.'~type|default('file') %}

{% block title %} {{ parent() }} - {{ pageTitle|trans|capitalize }} {% endblock %}

{% block formsearchplaceholder %}{{ 'media.file.list.search'|trans }} {{ pageTitle|trans|lower }} ...{% endblock %}

{% block headingactions %}
<div class="heading_actions">
    <a href="#upload_files_modal" data-uk-modal="{ center:false }">
        <span class="uk-text-bold">{{ 'media.file.list.import'|trans|upper }}</span>
        <i class="fa fa-cloud-upload"></i>
    </a>
</div>
{% endblock %}

{% block breadcrumbmodule %}
    {{ parent() }}
    <em>{{ pageTitle|trans|capitalize }}</em>
{% endblock %}

{% block content %}
    <div id="page_content_inner">
        <div class="uk-width-1-1 uk-text-right uk-margin-bottom">
            <div class="uk-button-dropdown" data-uk-dropdown>
                <button class="md-btn">
                    {% if type is defined and type is not empty %}
                        {% set filterTitle = "media.file.list.filter."~type %}
                        {{ filterTitle|trans }}
                    {% else %}
                        {{ 'media.file.list.filter.title'|trans }}
                    {% endif %}
                    <i class="material-icons">&#xE313;</i>
                </button>
                <div class="uk-dropdown uk-dropdown-small uk-text-left">
                    <ul class="uk-nav uk-nav-dropdown">
                        {% if type is defined and type is not empty %}
                            <li>
                                <a href="{{ url('puzzle_admin_media_file_list') }}">
                                    <i class="fa fa-file uk-margin-right"></i>
                                    {{ 'media.file.list.filter.all'|trans }}
                                </a>
                            </li>
                        {% endif %}
                        <li>
                            <a href="{{ url('puzzle_admin_media_file_list', {'type': 'audio' }) }}">
                                <i class="fa fa-file-audio-o uk-margin-right"></i>
                                {{ 'media.file.list.filter.audio'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ url('puzzle_admin_media_file_list', {'type': 'picture' }) }}">
                                <i class="fa fa-photo uk-margin-right"></i>
                                {{ 'media.file.list.filter.picture'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ url('puzzle_admin_media_file_list', {'type': 'video' }) }}">
                                <i class="fa fa-video-camera uk-margin-right"></i>
                                {{ 'media.file.list.filter.video'|trans }}
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="md-card">
            <div class="md-card-content">
                <table id="dt_individual_search" class="uk-table uk-table-hover" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th class="no-sort">
                            {% if files is not empty %}
                                <div class="toggle-action uk-hidden">
                                    <select class="grouped-actions">
                                        <option value="">{{ 'media.file.list.grouped_actions'|trans }}</option>
                                        <option value="copy">{{ 'media.file.list.copy'|trans }}</option>
                                        <option value="move">{{ 'media.file.list.move'|trans }}</option>
                                        <option value="delete">{{ 'media.file.list.delete'|trans }}</option>
                                    </select>
                                    <input type="hidden" value="{{ files|length|default('0') }}" id="toggle-items-count">
                                    <input type="hidden" value="0" id="toggle-items-checked-count">
                                </div>
                            {% endif %}
                        </th>
                        <th>{{ 'media.file.list.name'|trans }}</th>
                        <th>{{ 'media.file.list.date'|trans }}</th>
                        <th class="uk-text-right no-sort">{{ 'media.file.list.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for file in files %}
                            <tr class="toggleable" id="item-{{ file.id }}">
                                <td>
                                    <a class="uk-text-muted uk-text-small uk-text-left toggleable-btn-select" href="#">
                                        <i class="material-icons toggle-icon toggle-item" id="toggle-item-{{ file.id }}">&#xE835;</i>
                                    </a>
                                </td>
                                <td>
                                    <div class="uk-text-truncate">
                                        <a href="{{ url('puzzle_admin_media_file_show', {'id': file.id}) }}" class="show-modal">
                                            <i class="fa fa-file fa-2x uk-margin-right"></i>
                                            <span style="vertical-align: top;">{{ file.name }}</span>
                                        </a>
                                    </div>
                                </td>
                                <td>{{ date_time_ago(file.createdAt) }}</td>
                                <td class="uk-text-right">
                                    <div class="uk-button-dropdown" data-uk-dropdown="{mode:'click', pos:'bottom-right'}">
                                        <a><i class="fa fa-align-justify"></i></a>
                                        <div class="uk-dropdown uk-dropdown-small uk-dropdown-bottom uk-text-left" aria-hidden="true">
                                            <ul class="uk-nav uk-nav-dropdown">
                                                <li>
                                                    <a href="{{ url('puzzle_admin_media_file_show', { 'id': file.id }) }}" class="show-modal">
                                                        <i class="fa fa-eye"></i>
                                                        {{ 'media.file.list.show'|trans }}
                                                    </a>
                                                </li>
                                                {# <li>
                                                    <a href="{{ url('puzzle_admin_media_file_update', { 'id': file.id }) }}">
                                                        <i class="fa fa-pencil"></i>
                                                        {{ 'media.file.list.update'|trans }}
                                                    </a>
                                                </li> #}
                                                <li>
                                                    <a href="{{ asset(file.path) }}" target="blank" download>
                                                        <i class="fa fa-download"></i>
                                                        {{ 'media.file.list.download'|trans }}
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#" data-route="{{ url('puzzle_admin_media_file_delete', {'id': file.id}) }}"  data-text="{{ 'media.file.delete.description'|trans({'%fileName%': file.name}) }}" data-label="{{ file.name }}" class="remove-item">
                                                        <i class="fa fa-trash-o uk-text-danger"></i>
                                                        {{ 'media.file.list.delete'|trans }}
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block modal %}
    {{ parent() }}
    <div class="uk-modal" id="upload_files_modal">
        <div class="uk-modal-dialog">
            <div class="uk-modal-body uk-margin-top">
                <div class="uk-width-1-1">
                <ul class="uk-tab" data-uk-tab="{connect:'#tabs_1'}">
                    <li class="uk-active"><a href="#">{{ 'media.file.create.add_multiple'|trans|upper }}</a></li>
                    <li><a href="#">{{ 'media.file.create.add'|trans|upper }}</a></li>
                </ul>
                <ul id="tabs_1" class="uk-switcher uk-margin">
                    <li>
                        <div class="uk-form-row">     
                            <div id="file_upload_drop_file" class="uk-file-upload">
                                <p class="uk-text mb10">{{ 'media.file.create.drag_and_drop'|trans|upper }}</p>
                                <p class="uk-text-muted uk-text-small uk-margin-small-bottom">{{ 'media.file.create.or'|trans|upper }}</p>
                                <a class="uk-form-file md-btn md-btn-flat md-btn-flat-primary" id="file_upload_label_file">
                                    {{ 'media.file.create.choose'|trans|upper }}
                                    <input id="file_upload_select_file" type="file" multiple>
                                </a>
                                <input type="hidden" id="file_filters_file" value="{{ filters }}">
                                <input type="hidden" id="file_upload_context_file" value="media">
                            </div>
                            <div id="file_upload_progressbar_file" class="uk-progress uk-hidden">
                                <div class="uk-progress-bar" style="width:0" id="progress_bar_file">0%</div>
                            </div>
                            <input type="hidden" id="refresh-auto" value="1">
                            <input type="hidden" id="refresh-url" value="{{ url('puzzle_admin_media_file_list') }}">
                        </div>
                    </li>
                    <li>
                        <form method="post" action="{{ url('puzzle_admin_media_file_add') }}" class="uk-form-stacked">
                            <div class="uk-form-row" id="local">     
                                <div id="file_upload_drop_file" class="uk-file-upload">
                                    <p class="uk-text mb10">{{ 'media.file.create.drag_and_drop'|trans|upper }}</p>
                                    <p class="uk-text-muted uk-text-small uk-margin-small-bottom">{{ 'media.file.create.or'|trans|upper }}</p>
                                    <a class="uk-form-file md-btn md-btn-flat md-btn-flat-primary" id="file_upload_label_file">
                                        {{ 'media.file.create.choose'|trans|upper }}
                                        <input id="file_upload_select_file" type="file">
                                    </a>
                                    <input type="hidden" id="file_filters_file" value="{{ filters }}">
                                    <input type="hidden" id="file_upload_context_file" value="media">
                                </div>
                                <div id="file_upload_progressbar_file" class="uk-progress uk-hidden">
                                    <div class="uk-progress-bar" style="width:0" id="progress_bar_file">0%</div>
                                </div>
                            </div>
                            <div class="md-card-content uk-hidden" id="target_container_file">
                                <enmbed src="" alt="" id="target_file"/>
                                <input class="md-input" name="file" id="files_to_add_file"/>
                            </div>
                            <div class="uk-form-row uk-hidden alternate">
                                <label for="path" class="uk-form-label">{{ 'media.file.create.url'|trans }}</label>
                                <input class="md-input" name="path" id="path"/>
                            </div>
                            <div class="uk-form-row alternate uk-hidden">
                                <label for="path" class="uk-form-label">{{ 'media.file.create.name'|trans }}</label>
                                <input class="md-input" name="name" id="name"/>
                            </div>
                            <div class="uk-form-row">
                                <label for="caption" class="uk-form-label">{{ 'media.file.create.caption'|trans }}</label>
                                <input class="md-input" name="caption" id="caption"/>
                            </div>
                            <div class="uk-form-row uk-hidden alternate">
                                <div class="uk-form-row">
                                    <div class="uk-float-right">
                                        <input name="uploadable" id="uploadable" type="checkbox" data-switchery/>
                                    </div>
                                    <label for="caption" class="uk-display-block uk-margin-small-top uk-form-label">{{ 'media.file.create.copy'|trans }}</label>
                                </div>
                            </div>
                            <div class="uk-text-right">
                                <a href="#" id="toggle-source">{{ 'media.file.create.toggle_source'|trans }}</a>
                                <input id="source" name="source" value="local" type="hidden"/>
                            </div>
                            <div class="uk-modal-footer uk-text-right">
                                <button type="button" class="md-btn md-btn-flat uk-modal-close">{{ 'media.file.create.cancel'|trans }}</button>
                                <button type="submit" class="md-btn md-btn-success">{{ 'media.file.create.submit'|trans }}</button>
                            </div>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		$('body').on('change', '.grouped-actions', function(e){
			switch($(this).val()){
				case 'copy':
					showModal(Routing.generate('puzzle_admin_media_folder_browse'));
					break;
				case 'move':
					showModal(Routing.generate('puzzle_admin_media_folder_browse', {'operation': 'move'}));
					break;
				case 'delete':
					var modalId = 'delete-list-modal';
					
					UIkit.modal("#" + modalId).show();
					$('#' + modalId).find('#delete-list-btn').data('delete-item-route', 'puzzle_admin_media_file_delete');
				default:
					break;
			}
		});
	</script>
{% endblock %}

