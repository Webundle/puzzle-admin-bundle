{% trans_default_domain 'media' %}

{% extends 'AdminBundle:Media:layout.html.twig' %}

{% block title %}{{ parent() }} - {{ "media.folder.show.title"|trans|capitalize }}{% endblock %}

{% block headingactions %}
<div class="heading_actions">
    <div class="md-card-head-menu" data-uk-dropdown="{pos:'bottom-right'}">
        <a class="uk-text-bold" href="#" data-uk-modal="{ center:true }">
            {{ 'media.folder.show.actions'|trans|upper }}
            <i class="fa fa-ellipsis-v"></i>
        </a>
        <div class="uk-dropdown">
            <ul class="uk-nav">
                {% if folder.appName == "media" %}
                    <li>
                        <a href="#upload_files_modal" data-uk-modal="{ center:true }">
                            <i class="fa fa-cloud-upload uk-margin-small-right"></i>
                            {{ 'media.folder.show.new_file'|trans }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ url('puzzle_admin_media_folder_create', { 'parent': folder.id })}}" class="show-modal" id="{{ folder.id }}">
                            <i class="fa fa-plus uk-margin-small-right"></i>
                            {{ 'media.folder.show.new'|trans }}
                        </a>
                    </li>
                {% endif %}
                <li>
                    <a href="{{ url('puzzle_admin_media_folder_compress', { 'id': folder.id }) }}" class="download-folder" target="_blank">
                        <i class="fa fa-cloud-download uk-margin-small-right"></i>
                        {{ 'media.folder.show.download'|trans }}
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}

{% block breadcrumbmodule %}
    {{ parent() }}
    <a href=" {{ url('puzzle_admin_media_folder_list') }} ">
       {{ 'media.folder.list.title'|trans|capitalize }}
    </a>
    <i class="fa fa-chevron-right"></i>
    {% if folder.parent is not empty %}
    <a href=" {{ url('puzzle_admin_media_folder_show', {'id': folder.parent.id}) }}">
       ...
    </a>
    <i class="fa fa-chevron-right"></i>
    {% endif %}
    <em>{{ "media.folder.show.title"|trans|capitalize }}</em>
{% endblock %}

{% block content %}
    <div id="page_content_inner">
    	<div class="uk-grid uk-grid-medium" data-uk-grid-margin>
            <div class="uk-width-xLarge-3-10 uk-width-large-3-10">
            	<div class="md-card">
                    <div class="md-card-content">
                        <div class="uk-margin-bottom">
                            <label class="uk-text-bold">{{ 'media.folder.show.name'|trans }} : </label>
                            <span>{{ folder.name }}</span>
                        </div>
                        <div class="uk-margin-bottom">
                            <label class="uk-text-bold">{{ 'media.folder.show.allowed_extensions'|trans }} : </label>
                            {% if  folder.allowedExtensions is not empty %}
                                {% for allowedExtension in folder.allowedExtensions %}
                            		<span class="uk-badge">{{ allowedExtension }}</span>
                                {% endfor %}
                            {% endif %}
                        </div>
                        <div class="uk-margin-bottom">
                            <label class="uk-text-bold">{{ 'media.folder.show.created_at'|trans }} : </label>
                            <span>{{ date_time_ago(folder.createdAt) }}</span>
                        </div>
                        <div class="uk-margin-bottom">
                            <label class="uk-text-bold">{{ 'media.folder.show.updated_at'|trans }} : </label>
                            <span>{{ date_time_ago(folder.updatedAt) }}</span>
                        </div>
                        <div>
                            <label class="uk-text-bold">{{ 'media.folder.show.description'|trans }} : </label>
                            <span>{{ folder.description }}</span>
                        </div>
                    </div>
                </div>
                {% if folder.appName == "media" %}
                <div class="uk-text-center uk-margin-top">
                    <a href="{{ url('puzzle_admin_media_folder_update', { 'id': folder.id })}}" class="show-modal md-btn md-btn-primary" id="{{ folder.id }}">
                        {{ "media.folder.show.update"|trans }}
                    </a>
                    <a href="#" class="remove-item md-btn md-btn-danger" data-route="{{ url('puzzle_admin_media_folder_delete', {'id' : folder.id}) }}" data-label="{{ folder.name }}" data-title="{{ 'media.folder.delete.title' }}" data-text="{{ 'media.folder.delete.description'|trans({'%folderName%': folder.name}) }}">
                        {{ "media.folder.show.delete"|trans }}
                    </a>
                </div>
                {% endif %}
            </div>
            <div class="uk-width-xLarge-7-10 uk-width-large-7-10">
                <div class="md-card">
                    <div class="md-card-content">
                        <table id="dt_individual_search" class="uk-table uk-table-hover" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>{{ 'media.folder.show.name'|trans }}</th>
                                <th>{{ 'media.folder.show.updated_at'|trans }}</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for folder in childs %}
                                    <tr>
                                        <td>
                                            <div class="uk-text-truncate">
                                                <a href="{{ url('puzzle_admin_media_folder_show', {'id': folder.id}) }}" title="{{ folder.name }}">
                                                    <i class="fa fa-folder fa-2x uk-margin-right"></i>
                                                    <span style="vertical-align: top;">{{ folder.name|capitalize }}</span>
                                                </a>
                                            </div>
                                        </td>
                                        <td>{{ date_time_ago(folder.updatedAt) }}</td>
                                        <td class="uk-text-right">
                                            <div class="uk-button-dropdown" data-uk-dropdown="{mode:'click', pos:'bottom-right'}">
                                                <a><i class="fa fa-align-justify"></i></a>
                                                <div class="uk-dropdown uk-dropdown-small uk-dropdown-bottom uk-text-left" aria-hidden="true">
                                                    <ul class="uk-nav uk-nav-dropdown">
                                                        <li>
                                                            <a href="{{ url('puzzle_admin_media_folder_show', { 'id': folder.id }) }}">
                                                                <i class="fa fa-eye"></i>
                                                                {{ 'media.folder.list.show'|trans }}
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="{{ url('puzzle_admin_media_folder_update', { 'id': folder.id }) }}" class="show-modal">
                                                                <i class="fa fa-pencil"></i>
                                                                {{ 'media.folder.list.update'|trans }}
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="#" data-route="{{ url('puzzle_admin_media_folder_delete', {'id': folder.id}) }}" data-text="{{ 'media.folder.delete.description'|trans({'%folderName%': folder.name}) }}" data-label="{{ folder.name }}" class="remove-item">
                                                                <i class="fa fa-trash-o uk-text-danger"></i>
                                                                {{ 'media.folder.list.delete'|trans }}
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                {% for file in files %}
                                    <tr>
                                        <td>
                                            <div class="uk-text-truncate">
                                                <a href="{{ url('puzzle_admin_media_file_show', {'id': file.id}) }}" class="show-modal">
                                                    <i class="fa fa-file fa-2x uk-margin-right"></i>
                                                    <span style="vertical-align: top;">{{ file.name }}</span>
                                                </a>
                                            </div>
                                        </td>
                                        <td>{{ date_time_ago(file.createdAt) }}</td>
                                        <td class="uk-text-right">
                                            <div class="uk-button-dropdown" data-uk-dropdown="{mode:'click', pos:'bottom-right'}">
                                                <a><i class="fa fa-align-justify"></i></a>
                                                <div class="uk-dropdown uk-dropdown-small uk-dropdown-bottom uk-text-left" aria-hidden="true">
                                                    <ul class="uk-nav uk-nav-dropdown">
                                                        <li>
                                                            <a href="{{ url('puzzle_admin_media_file_show', { 'id': file.id }) }}" class="show-modal">
                                                                <i class="fa fa-eye"></i>
                                                                {{ 'media.file.list.show'|trans }}
                                                            </a>
                                                        </li>
                                                        {# <li>
                                                            <a href="{{ url('puzzle_admin_media_file_update', { 'id': file.id }) }}">
                                                                <i class="fa fa-pencil"></i>
                                                                {{ "button.update"|trans }}
                                                            </a>
                                                        </li> #}
                                                        <li>
                                                            <a href="{{ asset(file.path) }}" target="blank" download>
                                                                <i class="fa fa-download"></i>
                                                                {{ 'media.file.list.download'|trans }}
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a href="#" data-route="{{ url('puzzle_admin_media_folder_update_file_remove', {'id': folder.id, 'fileId': file.id}) }}" data-text="{{ 'media.file.delete.description'|trans({'%fileName%': file.name}) }}" data-label="{{ file.name }}" class="remove-item">
                                                                <i class="fa fa-trash-o uk-text-danger"></i>
                                                                {{ 'media.folder.list.delete'|trans }}
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block modal %}
    {{ parent() }}
    {% if folder.appName == "media" %}
        <div class="uk-modal" id="upload_files_modal">
            <div class="uk-modal-dialog">
                <div class="uk-modal-body uk-margin-top">
                    <div class="uk-width-1-1">
                    <ul class="uk-tab" data-uk-tab="{connect:'#tabs_1'}">
                        <li class="uk-active"><a href="#">{{ 'media.file.create.add_multiple'|trans }}</a></li>
                        <li><a href="#">{{ 'media.file.create.add'|trans }}</a></li>
                    </ul>
                    <ul id="tabs_1" class="uk-switcher uk-margin">
                        <li>
                            <form class="uk-form-stacked" action="{{ url('puzzle_admin_media_folder_update_files_add', {'id': folder.id}) }}" method="POST">
                                <div class="uk-form-row">     
                                    <div id="file_upload_drop" class="uk-file-upload">
                                        <p class="uk-text">{{ 'media.file.create.drag_and_drop'|trans }}</p>
                                        <p class="uk-text-muted uk-text-small uk-margin-small-bottom">{{ 'media.file.create.or'|trans }}</p>
                                        <a class="uk-form-file md-btn md-btn-flat md-btn-flat-primary" id="file_upload_label">{{ 'media.file.create.choose'|trans }}<input id="file_upload_select" type="file"multiple></a>

                                        <input type="hidden" id="file_filters" value="{{ folder.allowedExtensions|join('|')|default("*") }}">
                                        <input type="hidden" id="file_upload_context" value="{% if folder.parent is not empty %}{{ folder.id }}{% else %}media{% endif %}">
                                        <input type="hidden" name="files_to_add" id="files_to_add" value="">
                                    </div>
                                    <div id="file_upload_progressbar" class="uk-progress uk-hidden">
                                        <div class="uk-progress-bar" style="width:0">0%</div>
                                    </div>
                                    <input type="hidden" id="refresh-auto" value="1">
                                    <input type="hidden" id="refresh-url" value="{{ url('puzzle_admin_media_folder_show', { 'id': folder.id }) }}">
                                </div>
                            </form>
                        </li>
                        <li>
                            <form method="post" action="{{ url('puzzle_admin_media_file_add') }}" class="uk-form-stacked">
                                <input name="folder" type="hidden" value="{{ folder.id }}"/>
                                <div class="uk-form-row" id="local">     
                                    <div id="file_upload_drop" class="uk-file-upload">
                                        <p class="uk-text mb10">{{ 'media.file.create.drag_and_drop'|trans }}</p>
                                        <p class="uk-text-muted uk-text-small uk-margin-small-bottom">{{ 'media.file.create.or'|trans }}</p>
                                        <a class="uk-form-file md-btn md-btn-flat md-btn-flat-primary" id="file_upload_label">{{ 'media.file.create.choose'|trans }}<input id="file_upload_select" type="file"></a>
                                        <input type="hidden" id="file_filters" value="{{ folder.allowedExtensions|join('|')|default("*") }}">
                                        <input type="hidden" id="file_upload_context" value="{% if folder.parent is not empty %}{{ folder.id }}{% else %}media{% endif %}">
                                    </div>
                                    <div id="file_upload_progressbar" class="uk-progress uk-hidden">
                                        <div class="uk-progress-bar" style="width:0">0%</div>
                                    </div>
                                </div>
                                <div class="md-card-content uk-hidden" id="target_container_file">
                                    <enmbed src="" alt="" id="target_file"/>
                                    <input class="md-input" name="file" id="files_to_add_file"/>
                                </div>
                                <div class="uk-form-row uk-hidden alternate">
                                    <label for="path" class="uk-form-label">{{ 'media.file.create.url'|trans }}</label>
                                    <input class="md-input" name="path" id="path"/>
                                </div>
                                <div class="uk-form-row alternate uk-hidden">
                                    <label for="path" class="uk-form-label">{{ 'media.file.create.name'|trans }}</label>
                                    <input class="md-input" name="name" id="name"/>
                                </div>
                                <div class="uk-form-row">
                                    <label for="caption" class="uk-form-label">{{ 'media.file.create.caption'|trans }}</label>
                                    <input class="md-input" name="caption" id="caption"/>
                                </div>
                                <div class="uk-form-row uk-hidden alternate">
                                    <div class="uk-form-row">
                                        <div class="uk-float-right">
                                            <input name="uploadable" id="uploadable" type="checkbox" data-switchery/>
                                        </div>
                                        <label for="caption" class="uk-display-block uk-margin-small-top uk-form-label">{{ 'media.file.create.copy'|trans }}</label>
                                    </div>
                                </div>
                                <div class="uk-text-right">
                                    <a href="#" id="toggle-source">{{ 'media.file.create.toggle_source'|trans }}</a>
                                    <input id="source" name="source" value="local" type="hidden"/>
                                </div>
                                <div class="uk-modal-footer uk-text-right">
                                    <button type="button" class="md-btn md-btn-flat uk-modal-close">{{ 'media.file.create.cancel'|trans }}</button>
                                    <button type="submit" class="md-btn md-btn-success">{{ 'media.file.create.submit'|trans }}</button>
                                </div>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}