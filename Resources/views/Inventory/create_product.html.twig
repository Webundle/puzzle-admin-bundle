{% trans_default_domain 'messages' %}

{% extends 'AdminBundle:Inventory:layout.html.twig' %}

{% block title %}{{ parent() }} - {{ "inventory.product.create"|trans|capitalize }} {% endblock %}

{% block breadcrumbmodule %}
	{{ parent() }}
    <a href=" {{ url('admin_inventory_product_list') }} ">
       {{ 'inventory.product.list'|trans|capitalize }}
    </a>
	<i class="fa fa-chevron-right"></i>
	<em>{{ "inventory.product.create"|trans|capitalize }}</em>
{% endblock %}

{% block content %}
    <div id="page_content_inner">
        {% include 'AdminBundle:Inventory:form_product.html.twig' with {'form': form} %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var $kUI_multiselect_suppliers = $('#kUI_multiselect_suppliers');
        if($kUI_multiselect_suppliers.length) {
            $kUI_multiselect_suppliers.kendoMultiSelect();
        }

        var $kUI_multiselect_stores = $('#kUI_multiselect_stores');
        if($kUI_multiselect_stores.length) {
            $kUI_multiselect_stores.kendoMultiSelect();
        }
    </script>
{% endblock %}
