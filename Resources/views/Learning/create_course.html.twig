{% trans_default_domain 'learning' %}

{% extends 'AdminBundle:Learning:layout.html.twig' %}

{% block title %}{{ parent() }} - {{ "learning.course.create.title"|trans|capitalize }} {% endblock %}

{% block breadcrumbmodule %}
	{{ parent() }}
    <a href=" {{ url('puzzle_admin_learning_course_list') }} ">
       {{ 'learning.course.list.title'|trans|capitalize }}
    </a>
	<i class="fa fa-chevron-right"></i>
	<em>{{ "learning.course.create.title"|trans|capitalize }}</em>
{% endblock %}

{% block content %}
    <div id="page_content_inner">
        {% include 'AdminBundle:Learning:form_course.html.twig' with {'form': form} %}
    </div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
    	// Datetime Picker
        $("#started_at, #ended_at").kendoDateTimePicker({
           format: "dd-MM-yyyy HH:mm"
        });
	</script>
{% endblock %}