{% trans_default_domain 'learning' %}

{% extends 'AdminBundle:Learning:layout.html.twig' %}

{% block title %}{{ parent() }} - {{ "learning.category.list.title"|trans|capitalize }}{% endblock %}

{% block headingactions %}
<div class="heading_actions">
    <a href="{{ url('puzzle_admin_learning_category_create') }}" class="show-modal">
       	<span class="uk-text-bold">{{ "learning.category.list.new"|trans|upper }}</span>
        <i class="fa fa-plus-circle"></i>
    </a>
</div>
{% endblock %}

{% block breadcrumbmodule %}
    {{ parent() }}
	<em>{{ "learning.category.list.title"|trans|capitalize }}</em>
{% endblock %}

{% block content %}
     <div id="page_content_inner">
        <div class="md-card">
            <div class="md-card-content">
                <table id="dt_individual_search" class="uk-table uk-table-hover" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th class="no-sort">
                            {% if categories is not empty %}
                                <div class="toggle-action uk-hidden">
                                    <select class="delete-list">
                                        <option value="">{{ 'learning.category.list.grouped_actions'|trans }}</option>
                                        <option value="delete">{{ 'learning.category.list.delete'|trans }}</option>
                                    </select>
                                    <input type="hidden" value="{{ categories|length|default('0') }}" id="toggle-items-count">
                                    <input type="hidden" value="0" id="toggle-items-checked-count">
                                </div>
                            {% endif %}
                        </th>
                        <th>{{ "learning.category.list.name"|trans }}</th>
                        <th>{{ "learning.category.list.created_at"|trans }}</th>
                        <th>{{ "learning.category.list.updated_at"|trans }}</th>
                        <th class="uk-text-right no-sort">{{ "learning.category.list.actions"|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr class="toggleable" id="item-{{ category.id }}">
                                <td>
                                    <a class="uk-text-muted uk-text-small uk-text-left toggleable-btn-select" href="#">
                                        <i class="material-icons md-24 toggle-icon toggle-item" id="toggle-item-{{ category.id }}">&#xE835;</i>
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ url('puzzle_admin_learning_category_show', {'id': category.id}) }}">{{ category.name }}</a>
                                </td>
                                <td>{{ date_time_ago(category.createdAt) }}</td>
                                <td>{{ date_time_ago(category.updatedAt) }}</td>
                                <td class="uk-text-right">
                                    <div class="uk-button-dropdown" data-uk-dropdown="{mode:'click', pos:'bottom-right'}">
                                        <a><i class="fa fa-align-justify"></i></a>
                                        <div class="uk-dropdown uk-dropdown-small uk-text-left" aria-hidden="true">
                                            <ul class="uk-nav uk-nav-dropdown">
                                                <li>
                                                    <a href="{{ url('puzzle_admin_learning_category_show', { 'id': category.id }) }}">
                                                        <i class="fa fa-eye"></i>
                                                        {{ "learning.category.list.show"|trans }}
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="{{ url('puzzle_admin_learning_category_update', { 'id': category.id }) }}" class="show-modal">
                                                        <i class="fa fa-pencil"></i>
                                                        {{ "learning.category.list.update"|trans }}
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#" data-route="{{ url('puzzle_admin_learning_category_delete', {'id' : category.id}) }}" data-label="{{ category.name }}" class="remove-item" data-title="{{ 'learning.category.delete.title' }}" data-text="{{ 'learning.category.delete.description'|trans({'%categoryName%': category.name}) }}">
                                                        <i class="fa fa-trash-o uk-text-danger"></i>
                                                        {{ "learning.category.list.delete"|trans }}
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
