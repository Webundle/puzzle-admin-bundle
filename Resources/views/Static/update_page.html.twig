{% trans_default_domain 'static' %}

{% extends 'AdminBundle:Static:layout.html.twig' %}

{% block title %}{{ parent() }} - {{ "static.page.update.title"|trans }} {{ page.name }} {% endblock %}

{% block breadcrumbmodule %}
    {{ parent() }}
    <a href="{{ url('puzzle_admin_static_page_list') }}">{{ "static.page.list.title"|trans|capitalize }}</a>
    <i class="fa fa-chevron-right"></i>
    <em>{{ "static.page.update.title"|trans|capitalize }}</em>
{% endblock %}

{% block content %}
    <div id="page_content_inner">
        {% include 'AdminBundle:Static:form_page.html.twig' with {'form': form, 'page': page} %}
    </div>
{% endblock %}
